<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1080px"
    android:layout_height="1920px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ems="10"
        android:onClick="onClick"
        android:text="Date"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/description_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="40"
        android:text="Description" />

    <TextView
        android:id="@+id/trials_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Trials" />

    <TextView
        android:id="@+id/success_rate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Success Rate" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/success_button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Success" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/fail_button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Failure" />

    </LinearLayout>

    <ListView
        android:id="@+id/trial_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>