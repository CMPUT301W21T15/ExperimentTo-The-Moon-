<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingBottom="30dp"
        android:text="Please select from the drop down menu the resulting action for your QR code."/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="5dp"
        android:id="@+id/generate_qr_spinner"/>

    <Button
        android:id="@+id/generate_qr_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:text="Generate" />

    <Button
        android:id="@+id/generate_qr_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save QR code"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>


    <ImageView
        android:id="@+id/generate_qr_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>